<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <PreferenceCategory
      android:title="First Category">
    <CheckBoxPreference
        android:title="Checkbox Preference"
        android:defaultValue="false"
        android:summary="This preference can be true or false"
        android:key="checkboxPref" />
    <ListPreference
        android:title="renderer"
        android:summary="Legt den zu verwendeten Renderer fest"
        android:key="renderer"
        android:defaultValue="RadiusRenderRandom"
        android:entries="@array/items_renderer"
        android:entryValues="@array/values_renderer" />
  </PreferenceCategory>
  <PreferenceCategory
      android:title="Second Category">
    <EditTextPreference
        android:name="tilecountx"
        android:summary="Legt die Anzahl Tiles (Kacheln) fest"
        android:defaultValue="20"
        android:title="Anzahl Tiles"
        android:key="tilecount" />
    <ListPreference
        android:title="Algorithmus"
        android:summary="Legt den Algorithmus fest"
        android:key="algo"
        android:defaultValue="0"
        android:entries="@array/items_algo"
        android:entryValues="@array/values_algo" />
    <EditTextPreference
        android:name="Ausgelassene Tiles"
        android:summary="Legt die Anzahl der ausgelassenen Tiles (Kacheln) fest"
        android:defaultValue="2"
        android:title="Anzahl ausgelassene Tiles"
