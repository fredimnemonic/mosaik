<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mnemonic.mosaic"
          android:versionCode="1"
          android:versionName="1.0"
    >

  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

  <application android:icon="@drawable/photolibrary" android:label="@string/app_name">
    <activity android:name=".Mosaic" android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:label="@string/btn_create" android:name=".create.CreateActivity">
    </activity>

    <activity android:label="@string/btn_gallery" android:name=".gallery.GalleryActivity">
    </activity>

    <activity android:label="@string/menu_preferences" android:name=".preferences.PreferencesActivity">
    </activity>

    <activity android:label="@string/app_name" android:name=".gallery.SingleGalleryActivity">
    </activity>

    <activity android:label="@string/app_name" android:name=".gallery.SingleGalleryActivityDebug">
    </activity>

  </application>
  <uses-sdk android:minSdkVersion="8" />

</manifest>